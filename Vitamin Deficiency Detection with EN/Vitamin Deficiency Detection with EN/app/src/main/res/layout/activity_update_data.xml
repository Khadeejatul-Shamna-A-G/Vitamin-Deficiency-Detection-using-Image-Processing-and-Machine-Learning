<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".UpdateDataActivity">

    <androidx.appcompat.widget.Toolbar
        android:background="@color/black"
        android:elevation="0dp"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/toolBar"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vita"
                android:fontFamily="@font/core_sans_bold"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:letterSpacing="0.03"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="App"
                android:fontFamily="@font/core_sans_regular"
                android:textSize="18sp"
                android:layout_marginStart="4dp"
                android:textColor="@color/white"
                android:letterSpacing="0.03"/>

        </LinearLayout>

    </androidx.appcompat.widget.Toolbar>

    <androidx.core.widget.NestedScrollView
        android:layout_below="@id/toolBar"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:padding="10dp"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:padding="10dp"
                android:background="@color/black">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profilepic"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    app:civ_border_color="@color/white"
                    app:civ_border_width="1dp"
                    android:src="@drawable/user"/>


                <ImageView
                    android:id="@+id/changeprofilepic"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:elevation="4dp"
                    android:layout_alignBottom="@+id/profilepic"
                    android:layout_alignEnd="@+id/profilepic"
                    android:src="@drawable/uploadpic"/>

            </RelativeLayout>


            <TextView
                android:id="@+id/name_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="10dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/colorAccent"
                android:elevation="10dp"
                android:textSize="17sp"
                android:fontFamily="@font/core_sans_medium"
                android:letterSpacing="0.02"
                android:includeFontPadding="false"
                android:text="Lorem Ipsum" />


            <LinearLayout
                android:layout_marginTop="40dp"
                android:orientation="vertical"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Update Your Name"
                    android:fontFamily="@font/core_sans_regular"
                    android:textSize="17sp"
                    android:includeFontPadding="false"
                    app:met_primaryColor="@color/white"
                    app:met_iconLeft="@drawable/profile_iconn"
                    app:met_baseColor="@color/colorAccent"
                    app:met_textColorHint="@color/grey_font"
                    android:textColor="@color/white"
                    app:met_floatingLabel="highlight"
                    app:met_clearButton="true" />


                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Update Mobile Number"
                    app:met_iconLeft="@drawable/phone"
                    android:fontFamily="@font/core_sans_regular"
                    android:textSize="17sp"
                    app:met_textColorHint="@color/grey_font"
                    android:textColor="@color/white"
                    android:includeFontPadding="false"
                    app:met_floatingLabel="highlight"
                    app:met_primaryColor="@color/white"
                    app:met_baseColor="@color/colorAccent"
                    app:met_clearButton="true"
                    android:inputType="number" />

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Update Your Email"
                    android:fontFamily="@font/core_sans_regular"
                    android:textSize="17sp"
                    app:met_textColorHint="@color/grey_font"
                    android:textColor="@color/white"
                    android:includeFontPadding="false"
                    app:met_floatingLabel="highlight"
                    app:met_primaryColor="@color/white"
                    app:met_baseColor="@color/colorAccent"
                    app:met_iconLeft="@drawable/email_icon"
                    app:met_clearButton="true"
                    android:enabled="false"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="40dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/update"
                        android:text="@string/update_details"
                        android:fontFamily="@font/core_sans_medium"
                        android:letterSpacing="0.04"
                        android:textSize="17sp"
                        android:background="@drawable/rounded_shape"
                        android:textAllCaps="false"/>

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


</RelativeLayout>